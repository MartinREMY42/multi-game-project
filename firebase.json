{
  "hosting": {
    "public": "pantheonsgame",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
      "rules": "rules/firestore.json"
  },
  "database": {
      "rules": "rules/database.json"
  },
  "emulators": {
