{
    "compileOnSave": false,
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictTemplates": true,
        "strictInjectionParameters": true
    },
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        // The following options still need to be set to true
        // For now, we'll use the ts-strict plugin to do that file by file before enabling it globally
        "strictNullChecks": true,
        "noImplicitAny": false, // some fixes to do before enabling this one
        "strictFunctionTypes": false, // requires improving genericity
        "strictPropertyInitialization": false, // requires strictNullChecks
        "module": "es2020",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2020",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2020",
            "dom"
        ],
        "paths": {
            "core-js/es7/reflect": [
                "node_modules/core-js/proposals/reflect-metadata"
            ],
            "core-js/es6/*": ["node_modules/core-js/es"]
        }
    }
}
